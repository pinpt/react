{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"jsx": "react",
		"resolveJsonModule": true,
		"strict": true,
		"target": "ES2019",
		"outDir": "dist/esm"
	},
	"exclude": [
		"dist",
		"node_modules",
		"**/__stories__",
		"**/__test__",
		"**/__data__",
		"docs",
		"prettier.config.js",
		"tailwind.config.js",
		"jest-setup.js"
	]
}
