{
	"compilerOptions": {
		"sourceMap": true,
		"strict": false,
		"strictNullChecks": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"module": "commonjs",
		"target": "es2017",
		"jsx": "react-jsx",
		"types": ["react", "node", "jest"],
		"outDir": "dist/cjs",
		"stripInternal": true,
		"removeComments": true,
		"declarationMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"baseUrl": "./"
	},
	"exclude": [
		"dist",
		"node_modules",
		"**/__stories__",
		"**/__test__",
		"**/__data__",
		"docs",
		"prettier.config.js",
		"tailwind.config.js",
		"jest-setup.js",
		"tsconfig.esm.json",
		"rollup.config.js",
		"rewrite-react.js",
		"postcss.config.js",
		"build_widget_css.js"
	]
}
